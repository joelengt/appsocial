<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Welcome to Best Personajes
	meta(name="viewport", content="width=device-width, minimum-scale=1, maximum-scale=1")
	link(rel="stylesheet", href="../../../css/main.css")
body
	header(class="Header-Main")
		div(class="Header-Main__box")
			div(class="Header-Main__logo")
				a(href="/plataforma/personajes")
					figure
						img(src="../../../images/logo.png", width="43")
					h1 SocialApp

			div(class="Header-Main__user")
				figure
					img(src="#{user.photo}", width="50")
				p #{user.name}
				a(href="#", id="btn__menu__open") V
				a(href="#", id="btn__menu__close", style="display: none") X

	div(class="user__menu")
		ul
			li
				a(href="/plataforma/about-me/#{user._id}") Mi Perfil
			li
				a(href="/plataforma/chat-social") Chat Social
			li
				a(href="/logout") Salir

	section(class="Personajes-app")
		span(class="User-Perfil__msg") #{msg}
		div(class="Personajes-app__box")
			h2 Editar Personaje
			div(class="Personajes-app__read")
				div(class="Personajes-app__read__box", id="pj_item")
					article(class="Personajes-app__read__item", id="pj_item")
						div(class="item__title")
							h2 #{personaje.name}
						figure(class="item__imagen")
							img(src="#{personaje.cover}")
						div(class="item__data")
							div(class="item__data--rate")
								p(class="rate__right") 7 Likes
								p(class="rate__left") 23 Comentarios
							div(class="item__data--author")
								strong By:
								figure
									img(src="#{personaje.author_avatar}", width="20")
								p #{personaje.author_name}
						div(class="item__detalles")
							p Serie Anime: #{personaje.serie_anime}
							p Edad: #{personaje.age}
							p Sexo: #{personaje.sexo}


			div(class="Personajes-app__Update")
				div(class="Update__box")
					h2 Editar Datos
					form(action="/plataforma/personajes/edit/#{personaje._id}?_method=put", method="post", enctype="multipart/form-data")
						div
							label Nombre: (*)
							input(type="text", value="#{personaje.name}",placeholder="Nombre del Personaje", name="name", autocomplete="off", required)
						div
							label Serie: (*)
							input(type="text", value="#{personaje.serie_anime}", placeholder="Serie del Personaje", name="serie_anime", autocomplete="off", required)
						div
							label Edad:
							input(type="text", value="#{personaje.age}", placeholder="edad del Personaje", name="age")
						div
							label Sexo:
							input(type="text", value="#{personaje.sexo}", placeholder="Girl or Boy", name="sexo")
						div
							label Url Imagen:
							input(type="file" name="cover")
						button Guardar Cambios
						p (*) Estos campos son Obligatorios

script(type="text/javascript", src="../../../js/menu.js")
