.User-Perfil
	&__box
		max-width 700px
		margin 2rem auto
		background white
		padding-top 2rem
		padding-bottom 2rem
	&__data
		display block
		text-align center
		h2
			font-size 2rem
		img
			border-radius 50%
			padding-top .8rem
			padding-bottom .8rem
			
		.data__info
			display block
			margin 0 auto
			width 50%
			h3
				text-align left
				padding-top .5rem
			span
				display block
				padding-top .5rem
				text-align left
				strong
					display inline-block
					text-align left
				p
					display inline-block
					text-align left
					margin-left .5rem
				
	&__form
		display block
		text-align center
		padding-top 1rem
		form
			button
				padding 1rem 7rem
				font-size 1rem
				background #0BC6D9
				border none
				color white
				cursor pointer
				max-width 600px
				margin 0 auto
		
		
