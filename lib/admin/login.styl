.Login__admin
	&__box
		background white
		padding-top .5rem
		padding-bottom .5rem
		max-width 700px
		margin 2rem auto
		text-align center
		h2
			font-size 2rem
			padding-top 1rem
		.Login__msg
			color red
		form
			margin 0 auto
			width 70%
			div
				margin-top 1rem
				margin-bottom 1rem
				margin-left 1.5rem
				label
					display block
					padding-bottom .5rem
					text-align left
				input
					display block
					padding .7rem
					width 90%
			button
				display block
				width 90%
				margin 1rem auto
				padding 1rem
				color white
				border none
				background #5AE85A
				cursor pointer
				font-size 1.2rem
		
		span
			strong
				padding-top .5rem
				padding-bottom .5rem
			div
				strong
					display inline-block
				p
					display inline-block
					margin-left 1rem
					