.Chat-Social
	&__box
		text-align center
		display block
		max-width 900px
		margin 2rem auto
		background white
	&__form
		display block
		// background orange
		padding-top 1rem
		padding-bottom 1rem
		h2
			padding-bottom .8rem
			font-size 2rem
		form 
			input[type="text"]
				display inline-block
				padding .9rem
				font-size 1rem
				width 70%
			button
				display inline-block
				padding 1.1rem
				width 10%
				cursor pointer
				border none
				color white
				background #0BC6D9
				
			
	&__msgs
		display block
		// background olive
		padding-top 1rem
		padding-bottom 1rem
		margin 0 auto
		max-width 800px
		
		.msgs__list
			display block
			text-align center
			.msgs__item
				list-style none
				padding-top .5rem
				padding-bottom .5rem
				background #FBFBFB
				border-bottom 1px solid #DEDEDE
				padding-left 2.5rem
				.msgs__item__avatar
					display block
					text-align left
					img
						display inline-block
						vertical-align middle
						border-radius 50%
						&:hover
							cursor pointer
					
					strong
						display inline-block
						vertical-align middle
						text-align left
						padding-left .5rem
						
				.msgs__item__charla
					display block
					text-align left
					padding-left 2.5rem
					p
						text-align left
						padding-left .1rem
		