.Personajes-app
	// background orange
	&__box
		text-align center
		margin-bottom 1rem
		max-width 900px
		margin 2rem auto
	&__form
		background white
		padding-top 1rem
		padding-bottom 1rem
		h2 
			padding-top 1rem
			padding-bottom 1rem
		p
			padding-top .5rem
			padding-bottom .5rem
		form
			display block
			background #F7F7F7
			max-width 500px
			margin 0 auto
			padding 1.7rem

			div
				display block
				width 100%
				text-align center
				padding-bottom .8rem
				label
					display block
					text-align left
					margin-left .6rem
					
				input
					display block
					padding .7rem
					font-size 1rem
					width 90%
					margin-left .6rem
			button
				width 95%
				margin 0 auto
				text-align center
				display block
				border none
				background #51EA57
				color white
				padding .7rem
				cursor pointer
				font-size 1rem
					
	.Personajes-app__read
		&__box
			padding-top 2rem
			padding-bottom 2rem
		&__item
			max-width 600px
			margin 0 auto
			background white
			margin-bottom 3rem
			
			.item__title
				padding 1rem
				h2
					font-size 1.5rem
			.item__imagen
				img
					max-width 100%
			.item__data
				display block
				padding-top .6rem
				overflow hidden
				padding-bottom .6rem
				
				.item__data--rate
					margin-left 3.5rem
					float left
					display inline-flex
					.rate__right
						display inline-block
						vertical-align middle
						span
							font-family 'Arial', sans-serif
							margin-right .2rem
							color #3A3A3A
					.rate__left
						display inline-block
						margin-left 1rem
						vertical-align middle
						span
							font-family 'Arial', sans-serif
							margin-right .2rem
							color #3A3A3A
				
				.item__data--author
					margin-right 3.5rem
					float right
					display inline-flex
					strong
						display inline-block
					figure
						display inline-block
						margin-left .3rem
						
						img
							border-radius 50%
					p
						display inline-block
						margin-left .3rem
						
			.item__detalles
				display block
				padding-top .6rem
				padding-bottom .6rem
				margin 0 auto
				width 40%
				span
					display block
					text-align left
					strong
						display inline-block
					p
						display inline-block
						margin-left .5rem
			.item__action
				display block
				padding 1rem
				text-align center
				border-top: 1px solid #E1DFDF;
				width 90%
				margin 0 auto
				.action--like
					display inline-flex
					width 25px
					margin-right 1.5rem
					a
						text-decoration none
						font-size 1.5rem
						&.color-gray
							color #A7A5A5
						&.color-red
							color red
				.action--comment
					display inline-flex
					width 74%
					input
						width 100%
						padding .5rem
						font-size .9rem
						border none
						margin-right 1rem
				.action--settings
					display inline-flex
					width 25px
					a
						text-decoration none
						padding .8rem
						font-size 1.5rem
						color #717171

